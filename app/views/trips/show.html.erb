<h1 class="trip-location">Locations On Trip</h1>
<%= link_to 'Edit Trip', edit_trip_path(@trip) %>
<%= link_to 'Delete Trip', [current_user, @trip], method: :delete %>

<% @trip.locations.each() do |location| %>
    <div class="show__location">
        <p> Location: <%= location.city %>  <%= link_to "Edit", locations_edit_path  %> </p>
        <p> Address: <%= location.address.street_address %> <%= link_to "Edit", edit_location_address_path(location.id, location.address.id)  %> </p>
        <%= link_to "Add Address", new_location_address_path(location.id) %>
    </div>
<% end %>
